<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="assets_backend" name="card_designer assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" href="/ies_card_designer/static/src/less/mass_mailing.less"/>
            <link rel="stylesheet" href="/ies_card_designer/static/src/css/card_template.css"/>
            <script type="text/javascript" src="/ies_card_designer/static/src/js/mass_mailing.js"></script>
        </xpath>
    </template>

    <template id="assets_editor" inherit_id="web_editor.assets_editor">
        <xpath expr="//link[last()]" position="after">
            <link type="text/less" rel="stylesheet" href="/ies_card_designer/static/src/less/mass_mailing.ui.less"/>
        </xpath>
    </template>
</odoo>
