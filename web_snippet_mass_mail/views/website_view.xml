<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="s_mail_block_partner_image_text" name="Image - Text">
        <div class="o_mail_block_partner_image_text">
            <div class="o_mail_snippet_general">
                <table align="center" cellspacing="0" cellpadding="0" class="o_mail_table_styles">
                    <tbody>
                        <tr>
                            <td style="width:300px;text-align:center;vertical-align:middle" class="o_mail_col_mv o_mail_img_container o_mail_h_padding o_mail_v_padding">
                                    <img id="o_mail_block_partner_image_text_field" class='center-block' t-attf-src='/web/image?model=#{image_snippets_id.model_id.model}&amp;field=#{image_snippets_id.field_id.name}&amp;id=${object.id}' t-attf-style="background: url(/web/image?model=custome.image.snippets&amp;field=sample_image&amp;id=#{image_snippets_id.id}) no-repeat center;    background-size: 40%; height:130px;"/>
                            </td>
                            <td style="width:100px;vertical-align:middle;text-align:center;" class="o_mail_col_mv o_mail_h_padding o_mail_v_padding">
                                <h3 style="font-size:17px"><span>${object.name}</span></h3>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </template>

    <template id="email_designer_snippets" inherit_id="mass_mailing.email_designer_snippets" >
         <xpath expr="//h2[@id='snippets_menu']" position="after">
            <h4 id="snippets_template_size" class="text-center" style="color:white;">Change Size</h4>
            <select id="input_snippets_template_size" class="form-control oe_view_list" style="margin-bottom:10px; width: 80% !important;margin-left: 8%; ">
                <option value=""> Default </option>
                <t t-foreach="sizes" t-as="size">
                    <option t-att-value="size.width,size.height">
                        <t t-esc="size.name" />
                    </option>
               </t>
            </select>
         </xpath>
         <xpath expr="//div[@id='o_scroll']" position="inside">
            <t t-foreach="image_snippets_ids" t-as="image_snippets_id">
                <div id="email_designer_default_partner_extra" class="o_panel">
                    <div class="o_panel_header">
                        <i class="fa fa-plus"/> <t t-esc="image_snippets_id.name" /> Content
                    </div>
                    <div class="o_panel_body">
                        <t t-snippet="web_snippet_mass_mail.s_mail_block_partner_image_text" t-thumbnail="/mass_mailing/static/src/img/blocks/block_image_text.png"/>
                    </div>
                </div>
            </t>
        </xpath>
    </template>

    <template id="assets_editor" inherit_id="web_editor.assets_editor">
        <xpath expr="//link[last()]" position="after">
            <script type="text/javascript" src="/web_snippet_mass_mail/static/src/js/mass_mailing_editor_size.js"></script>
        </xpath>
    </template>

</odoo>
