<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <form t-name="card_design.dialog.position" style="overflow: scroll;height:530px;" action="#" class="form-horizontal">
        <hr />
        <strong class="text-center" style="float: left; margin-right: 10px;"> Position </strong>
        <select class="form-control" style="width: auto;height: 30px;margin-top: -5px;" id="pstyle" name="pstyle">
            <option value="px">px</option>
            <option value="%">%</option>
        </select>
        <hr />
        <div class="form-group">
            <label class="col-sm-3 control-label" for="title">Position</label>
            <div class="col-sm-9">
                <select  class="form-control" id="position" name="position">
                    <option value="">None</option>
                    <option value="static">Static</option>
                    <option value="relative">Relative</option>
                    <option value="fixed">Fixed</option>
                    <option value="absolute">Absolute</option>
                    <option value="sticky">Sticky</option>
                    <option value="initial">Initial</option>
                    <option value="inherit">Inherit</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="pptop">Top</label>
            <div class="col-sm-9">
                <input class="form-control" id="pptop" type="number"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="ppbottom">Bottom</label>
            <div class="col-sm-9">
                <input class="form-control" id="ppbottom" type="number"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="ppleft">Left</label>
            <div class="col-sm-9">
                <input class="form-control" id="ppleft" type="number"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="ppright">Right</label>
            <div class="col-sm-9">
                <input class="form-control" id="ppright" type="number"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="zindex">Z-Index</label>
            <div class="col-sm-9">
                <input class="form-control" id="zindex" type="number"/>
            </div>
        </div>
        <hr />
        <strong class="text-center">Background Color</strong>
        <hr />
        <div class="form-group">
            <label class="col-sm-3 control-label" for="pbackground">Color</label>
            <div class="col-sm-9">
                <input class="form-control" id="pbackground" type="text"/>
            </div>
        </div>
        <hr />
        <strong class="text-center" style="float:left; margin-right: 10px;">Size (px)</strong>
        <select class="form-control" style="width: auto;height: 30px;margin-top: -5px;" id="sstyle" name="sstyle">
            <option value="px">px</option>
            <option value="em">em</option>
            <option value="%">%</option>
        </select>
        <hr />
        <div class="form-group">
            <label class="col-sm-3 control-label" for="width">Width</label>
            <div class="col-sm-9">
                <input class="form-control" id="width" type="number"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="height">Height</label>
            <div class="col-sm-9">
                <input class="form-control" id="height" type="number"/>
            </div>
        </div>
        <hr />
        <strong class="text-center"> Overflow </strong>
        <hr />
        <div class="form-group">
            <label class="col-sm-3 control-label" for="title">Overflow</label>
            <div class="col-sm-9">
                <select  class="form-control" id="overflow" name="overflow">
                    <option value="">None</option>
                    <option value="auto">Auto</option>
                    <option value="hidden">Hidden</option>
                    <option value="scroll">Scroll</option>
                    <option value="visible">Visible</option>
                </select>
            </div>
        </div>
        <hr />
        <strong class="text-center">Border</strong>
        <hr />
        <div class="form-group">
            <label class="col-sm-3 control-label" for="pborder">Border</label>
            <div class="col-sm-9">
                <select  class="form-control" id="pborder" name="pborder">
                    <option value="">None</option>
                    <option value="dotted">Dotted</option>
                    <option value="dashed">Dashed</option>
                    <option value="solid">Solid</option>
                    <option value="double">Double</option>
                    <option value="groove">Groove</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="ptborder">Border Top</label>
            <div class="col-sm-9">
                <select  class="form-control" id="ptborder" name="ptborder">
                    <option value="">None</option>
                    <option value="dotted">Dotted</option>
                    <option value="dashed">Dashed</option>
                    <option value="solid">Solid</option>
                    <option value="double">Double</option>
                    <option value="groove">Groove</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="pbborder">Border Bottom</label>
            <div class="col-sm-9">
                <select  class="form-control" id="pbborder" name="pbborder">
                    <option value="">None</option>
                    <option value="dotted">Dotted</option>
                    <option value="dashed">Dashed</option>
                    <option value="solid">Solid</option>
                    <option value="double">Double</option>
                    <option value="groove">Groove</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="plborder">Border Left</label>
            <div class="col-sm-9">
                <select  class="form-control" id="plborder" name="plborder">
                    <option value="">None</option>
                    <option value="dotted">Dotted</option>
                    <option value="dashed">Dashed</option>
                    <option value="solid">Solid</option>
                    <option value="double">Double</option>
                    <option value="groove">Groove</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="ptborder">Border Right</label>
            <div class="col-sm-9">
                <select  class="form-control" id="prborder" name="prborder">
                    <option value="">None</option>
                    <option value="dotted">Dotted</option>
                    <option value="dashed">Dashed</option>
                    <option value="solid">Solid</option>
                    <option value="double">Double</option>
                    <option value="groove">Groove</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="pbordersize">Width (px)</label>
            <div class="col-sm-9">
                <input class="form-control" id="pbordersize" type="number"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="pbordercolor">Color</label>
            <div class="col-sm-9">
                <input class="form-control" id="pbordercolor" type="text"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="pborderadius">Radius (%)</label>
            <div class="col-sm-9">
                <input class="form-control" id="pborderadius" type="number"/>
            </div>
        </div>
        <hr />
        <strong class="text-center" style="float:left; margin-right: 10px;"> Margin </strong>
        <select class="form-control" style="width: auto;height: 30px;margin-top: -5px;" id="mstyle" name="mstyle">
            <option value="px">px</option>
            <option value="em">em</option>
            <option value="%">%</option>
        </select>
        <hr />
        <div class="form-group">
            <label class="col-sm-3 control-label" for="mtop">Top</label>
            <div class="col-sm-9">
                <input class="form-control" id="mtop" type="number"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="mright">Right</label>
            <div class="col-sm-9">
                <input class="form-control" id="mright" type="number"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="mbottom">Bottom</label>
            <div class="col-sm-9">
                <input class="form-control" id="mbottom" type="number"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="mleft">Left</label>
            <div class="col-sm-9">
                <input class="form-control" id="mleft" type="number"/>
            </div>
        </div>
        <hr />
        <strong class="text-center" style="float:left; margin-right: 10px;"> Padding </strong>
        <select class="form-control" style="width: auto;height: 30px;margin-top: -5px;" id="pdstyle" name="pdstyle">
            <option value="px">px</option>
            <option value="em">em</option>
            <option value="%">%</option>
        </select>
        <hr />
        <div class="form-group">
            <label class="col-sm-3 control-label" for="ptop">Top</label>
            <div class="col-sm-9">
                <input class="form-control" id="ptop" type="number"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="pright">Right</label>
            <div class="col-sm-9">
                <input class="form-control" id="pright" type="number"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="pbottom">Bottom</label>
            <div class="col-sm-9">
                <input class="form-control" id="pbottom" type="number"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="pleft">Left</label>
            <div class="col-sm-9">
                <input class="form-control" id="pleft" type="number"/>
            </div>
        </div>
    </form>

    <div t-name="card_design.theme_selector" class="o_mail_theme_selector">
        <a href="#" class="btn btn-xs dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-paint-brush"/> Change Style
        </a>
        <div class="dropdown-menu">
            <li t-foreach="themes" t-as="theme">
                <a href="#">
                    <div class="o_thumb small"  t-attf-style="background-image: url(#{theme.img}_small.png)"/>
                    <div class="o_thumb large" t-attf-style="background-image: url(#{theme.img}_large.png)"/>
                    <div class="o_thumb logo" t-attf-style="background-image: url(#{theme.img}_logo.png)"/>
                </a>
            </li>
        </div>
    </div>

    <div t-name="web_editor.snippet.option.borderpicker" class="borderpicker">
        <div class="note-palette-title">Border</div>
        <div class="btn-group palette-reset">
            <div class="note-border-reset" data-event="foreborder" data-value="inherit" title="None">
                <i class="fa fa-ban"/>
            </div>
        </div>
        <div class="o_borderpicker_sections">
            <ul class="nav nav-pills o_borderpicker_section_menu"/>
            <div class="tab-content o_borderpicker_section_tabs"/>
        </div>
    </div>

    <div t-name="web_editor.snippet.option.borderradiuspicker" class="borderradiuspicker">
        <div class="note-palette-title">Border Radius</div>
        <div class="btn-group palette-reset">
            <div class="note-border-reset" data-event="foreborder" data-value="inherit" title="None">
                <i class="fa fa-ban"/>
            </div>
        </div>
        <div class="o_borderpicker_sections">
            <ul class="nav nav-pills o_borderpicker_section_menu"/>
            <div class="tab-content o_borderpicker_section_tabs"/>
        </div>
    </div>

    <div t-name="web_editor.snippet.option.bordersizepicker" class="bordersizepicker">
        <div class="note-palette-title">Border Size</div>
        <div class="btn-group palette-reset">
            <div class="note-border-reset" data-event="foreborder" data-value="inherit" title="None">
                <i class="fa fa-ban"/>
            </div>
        </div>
        <div class="o_borderpicker_sections">
            <ul class="nav nav-pills o_borderpicker_section_menu"/>
            <div class="tab-content o_borderpicker_section_tabs"/>
        </div>
    </div>

    <div t-name="web_editor.snippet.option.bordercolorpicker" class="bordercolorpicker">
        <div class="note-palette-title">Border Color</div>
        <div class="btn-group palette-reset">
            <div class="note-color-reset" data-event="foreColor" data-value="inherit" title="None">
            </div>
        </div>
        <div class="o_colorpicker_sections">
            <ul class="nav nav-pills o_colorpicker_section_menu"/>
            <div class="tab-content o_colorpicker_section_tabs"/>
        </div>
    </div>

    <t t-extend="web_editor.snippet_overlay">
        <t t-jquery="a.oe_snippet_remove" t-operation="before">
            <a href="#" class="btn btn-default btn-sm oe_snippet_more_style" title="Style"><i class="fa fa-cogs ml4 mr4"></i></a>
        </t>
    </t>

    <template id="card_design.borderpicker" name="Border-Picker">
        <borderpicker>
            <div class="o_borderpicker_section" data-name="theme" data-icon-class="fa fa-square-o">
                <button data-border="dotted">Dotted</button>
                <button data-border="dashed">Dashed</button>
                <button data-border="solid">Solid</button>
                <button data-border="double">Double</button>
                <button data-border="groove">Groove</button>
            </div>
            <div class="o_borderpicker_section" data-name="theme" data-icon-class="fa fa-square-o">
                <button data-border="top-dotted">Top Dotted</button>
                <button data-border="top-dashed">Top Dashed</button>
                <button data-border="top-solid">Top Solid</button>
                <button data-border="top-double">Top Double</button>
                <button data-border="top-groove">Top Groove</button>
            </div>
            <div class="o_borderpicker_section" data-name="theme" data-icon-class="fa fa-square-o">
                <button data-border="left-dotted">Left Dotted</button>
                <button data-border="left-dashed">Left Dashed</button>
                <button data-border="left-solid">Left Solid</button>
                <button data-border="left-double">Left Double</button>
                <button data-border="left-groove">Left Groove</button>
            </div>
            <div class="o_borderpicker_section" data-name="theme" data-icon-class="fa fa-square-o">
                <button data-border="bottom-dotted">Bottom Dotted</button>
                <button data-border="bottom-dashed">Bottom Dashed</button>
                <button data-border="bottom-solid">Bottom Solid</button>
                <button data-border="bottom-double">Bottom Double</button>
                <button data-border="bottom-groove">Bottom Groove</button>
            </div>
            <div class="o_borderpicker_section" data-name="theme" data-icon-class="fa fa-square-o">
                <button data-border="right-dotted">Right Dotted</button>
                <button data-border="right-dashed">Right Dashed</button>
                <button data-border="right-solid">Right Solid</button>
                <button data-border="right-double">Right Double</button>
                <button data-border="right-groove">Right Groove</button>
            </div>
