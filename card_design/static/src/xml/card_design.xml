<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <div t-name="card_design.theme_selector" class="o_mail_theme_selector">
        <a href="#" class="btn btn-xs dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-paint-brush"/> Change Style
        </a>
        <div class="dropdown-menu">
            <li t-foreach="themes" t-as="theme">
                <a href="#">
                    <div class="o_thumb small"  t-attf-style="background-image: url(#{theme.img}_small.png)"/>
                    <div class="o_thumb large" t-attf-style="background-image: url(#{theme.img}_large.png)"/>
                    <div class="o_thumb logo" t-attf-style="background-image: url(#{theme.img}_logo.png)"/>
                </a>
            </li>
        </div>
    </div>

    <div t-name="web_editor.snippet.option.borderpicker" class="borderpicker">
        <div class="note-palette-title">Border</div>
        <div class="btn-group palette-reset">
            <div class="note-border-reset" data-event="foreborder" data-value="inherit" title="None">
                <i class="fa fa-ban"/>
            </div>
        </div>
        <div class="o_borderpicker_sections">
            <ul class="nav nav-pills o_borderpicker_section_menu"/>
            <div class="tab-content o_borderpicker_section_tabs"/>
        </div>
    </div>

    <div t-name="web_editor.snippet.option.borderradiuspicker" class="borderradiuspicker">
        <div class="note-palette-title">Border Radius</div>
        <div class="btn-group palette-reset">
            <div class="note-border-reset" data-event="foreborder" data-value="inherit" title="None">
                <i class="fa fa-ban"/>
            </div>
        </div>
        <div class="o_borderpicker_sections">
            <ul class="nav nav-pills o_borderpicker_section_menu"/>
            <div class="tab-content o_borderpicker_section_tabs"/>
        </div>
    </div>

    <div t-name="web_editor.snippet.option.bordersizepicker" class="bordersizepicker">
        <div class="note-palette-title">Border Size</div>
        <div class="btn-group palette-reset">
            <div class="note-border-reset" data-event="foreborder" data-value="inherit" title="None">
                <i class="fa fa-ban"/>
            </div>
        </div>
        <div class="o_borderpicker_sections">
            <ul class="nav nav-pills o_borderpicker_section_menu"/>
            <div class="tab-content o_borderpicker_section_tabs"/>
        </div>
    </div>

    <div t-name="web_editor.snippet.option.bordercolorpicker" class="bordercolorpicker">
        <div class="note-palette-title">Border Color</div>
        <div class="btn-group palette-reset">
            <div class="note-color-reset" data-event="foreColor" data-value="inherit" title="None">
            </div>
        </div>
        <div class="o_colorpicker_sections">
            <ul class="nav nav-pills o_colorpicker_section_menu"/>
            <div class="tab-content o_colorpicker_section_tabs"/>
        </div>
    </div>

    <template id="card_design.borderpicker" name="Border-Picker">
        <borderpicker>
            <div class="o_borderpicker_section" data-name="theme" data-icon-class="fa fa-flask">
                <button data-border="dotted">Dashed</button>
                <button data-border="dashed">Dashed</button>
                <button data-border="solid">Solid</button>
                <button data-border="double">Double</button>
                <button data-border="groove">Groove</button>
            </div>
        </borderpicker>
    </template>

    <template id="card_design.bordersizepicker" name="Border-Size-Picker">
        <bordersizepicker>
            <div class="o_borderpicker_section" data-name="theme" data-icon-class="fa fa-database">
                <button data-border-width="width-2px">2px</button>
                <button data-border-width="width-3px">3px</button>
                <button data-border-width="width-4px">4px</button>
                <button data-border-width="width-5px">5px</button>
                <button data-border-width="width-6px">6px</button>
            </div>
        </bordersizepicker>
    </template>

    <template id="card_design.borderradiuspicker" name="Border-Radius-Picker">
        <borderradiuspicker>
            <div class="o_borderpicker_section" data-name="theme" data-icon-class="fa fa-database"
                style="overflow-x: hidden;height:250px;overflow-y: scroll;">
                <button data-border-radius="radius-10">10%</button>
                <button data-border-radius="radius-20">20%</button>
                <button data-border-radius="radius-30">30%</button>
                <button data-border-radius="radius-40">40%</button>
                <button data-border-radius="radius-50">50%</button>
                <button data-border-radius="radius-5px">5px</button>
                <button data-border-radius="radius-10px">10px</button>
                <button data-border-radius="radius-15px">15px</button>
                <button data-border-radius="radius-20px">20px</button>
                <button data-border-radius="radius-22px">22px</button>
                <button data-border-radius="radius-24px">24px</button>
                <button data-border-radius="radius-25px">25px</button>
                <button data-border-radius="radius-30px">30px</button>
                <button data-border-radius="radius-35px">35px</button>
                <button data-border-radius="radius-40px">40px</button>
                <button data-border-radius="radius-45px">45px</button>
            </div>
        </borderradiuspicker>
    </template>

    <template id="card_design.bordercolorpicker" name="Boder-Color-Picker">
        <colorpicker>
            <div
                class="o_colorpicker_section"
                data-name="custom_color"
                data-icon-class="fa fa-code">
                <input type="text" class="form-control" />
            </div>
        </colorpicker>
    </template>
</templates>
